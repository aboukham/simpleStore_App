<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_marginLeft="30dp">


    <TextView
        android:id="@+id/field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="* field required "
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="225dp"
        app:layout_constraintTop_toBottomOf="@+id/creation"
        app:layout_constraintBottom_toTopOf="@+id/firstNameLabel"/>

    <TextView
        android:id="@+id/lastNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name *"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/lastNameText"
        app:layout_constraintTop_toBottomOf="@+id/firstNameText"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="24dp"></TextView>

    <EditText
        android:id="@+id/firstNameText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toTopOf="@+id/lastNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/firstNameLabel"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"></EditText>

    <TextView
        android:id="@+id/firstNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name *"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/firstNameText"
        app:layout_constraintTop_toBottomOf="@+id/field"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="32dp"></TextView>

    <EditText
        android:id="@+id/lastNameText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toTopOf="@+id/emailAddressLabel"
        app:layout_constraintTop_toBottomOf="@+id/lastNameLabel"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="24dp"></EditText>

    <ImageView
        android:id="@+id/image"
        android:layout_width="252dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/walmart_logo2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/creation"/>

    <TextView
        android:id="@+id/creation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Create your account"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="119dp"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintBottom_toTopOf="@+id/field"/>

    <TextView
        android:id="@+id/emailAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address *"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="472dp"
        app:layout_constraintTop_toBottomOf="@+id/lastNameText"
        app:layout_constraintBottom_toTopOf="@+id/emailAddressText"></TextView>

    <EditText
        android:id="@+id/emailAddressText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toTopOf="@+id/passwordLabel"
        app:layout_constraintTop_toBottomOf="@+id/emailAddressLabel"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"></EditText>

    <TextView
        android:id="@+id/passwordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password *"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/passwordText"
        app:layout_constraintTop_toBottomOf="@+id/emailAddressText"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="32dp"></TextView>

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toTopOf="@+id/btn"
        app:layout_constraintTop_toBottomOf="@+id/passwordLabel"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"></EditText>

    <Button
        android:id="@+id/btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Create account"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="667dp"
        app:layout_constraintTop_toBottomOf="@+id/passwordText"
        app:layout_constraintBottom_toBottomOf="parent"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>